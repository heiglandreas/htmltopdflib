{
    "name": "org_heigl/html-to-pdflib",
    "description": "Convert HTML for usage in PDFlib",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Andreas Heigl",
            "email": "andreas@heigl.org"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-dom": "*"
    },
    "suggest": {
        "roave/better-reflection": "For using ConverterList::createViaBetterReflection"
    },
    "autoload" : {
        "psr-4" : {
            "Org_Heigl\\HtmlToPdflib\\" : "src/"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "Org_Heigl\\HtmlToPdflibTest\\" : "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3"
    }
}
